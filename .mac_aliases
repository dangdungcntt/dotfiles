md5() {
    echo -n $1 | /sbin/md5
}

lchown() {
    sudo chown -R dangdung:_www storage bootstrap
    sudo chmod -R 775 storage bootstrap
}

alias o="open ."
alias cleardns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias rlocal="sudo ifconfig lo0 down && sudo ifconfig lo0 up"
alias gor='open https://$(git config --get remote.origin.url | cut -d"@" -f 2 |  sed "s|https://||g" | sed "s|:|/|g" | sed "s|.git$||g")'
alias gop='open https://$(git config --get remote.origin.url | cut -d"@" -f 2 |  sed "s|https://||g" | sed "s|:|/|g" | sed "s|.git$||g")/-/pipelines/latest'
alias gocp='open https://$(git config --get remote.origin.url | cut -d"@" -f 2 |  sed "s|https://||g" | sed "s|:|/|g" | sed "s|.git$||g")/-/commit/$(git rev-parse HEAD)/pipelines'
alias gwd='echo -n "$(pwd)" | pbcopy'

# PhpStorm
export PATH=$HOME/.local/bin:$PATH

# Zsh key binding

bindkey '^[[D' beginning-of-line
bindkey '^[[C' end-of-line
